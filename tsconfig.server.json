{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "noEmit": false
  },
  "include": [
    "server"
  ],
  "exclude": [
    "node_modules",
    "server/signal"
  ],
  "watchOptions": {
    "excludeFiles": [
      "tsconfig.server.json",
      "server/signal/*"
    ]
  }
}